@model Client.Models.City

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

<hr />
<h4 style="text-align:center;">Edit city</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="cityId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="cityName" class="control-label"></label>
                <input asp-for="cityName" class="form-control" />
                <span asp-validation-for="cityName" class="text-danger"></span>
                <span class="text-danger">
                    @TempData["err"]
                </span>
            </div>
            <div class="form-group">
                <input asp-for="create_at" class="form-control" type="hidden" />
            </div>
            @*<div class="form-group">
                    <label asp-for="update_at" class="control-label"></label>
                    <input asp-for="update_at" class="form-control" />
                    <span asp-validation-for="update_at" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-sm btn-success">Back to list</a>

</div>

