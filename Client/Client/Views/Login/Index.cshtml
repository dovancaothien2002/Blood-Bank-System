@model Client.Models.Login

@{
    ViewData["Title"] = "Index";
}

<hr />
<div class="container">
    <div class="row mb-3 mt-3">
        <div class="col-md-4" style="margin:auto;border:1px solid #ced4da;padding:20px 30px">
            <h3 class="text-center">Login</h3>
           
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger pl-4 pt-1 pb-1"></div>
                <div class="form-group">
                    <label asp-for="email" class="control-label"></label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label"></label>
                    <input asp-for="password" type="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group row mt-4">
                    <button type="submit" class="btn btn-info" style="margin:auto" >Login</button>
                </div>
            </form>
        </div>
    </div>
</div>


